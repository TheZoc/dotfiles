#!/bin/sh
brew update
brew upgrade
brew install zsh

sudo mv /bin/zsh /bin/zsh-apple-original
sudo ln -s /usr/local/bin/zsh /bin/zsh
sudo sh -c "echo '/usr/local/bin/zsh' >> /etc/shells"
sudo sh -c "echo 'export ZDOTDIR=\"\${HOME}/.zsh\"' >> /etc/zshenv"
chsh -s /usr/local/bin/zsh

~/.install_zsh_part2
